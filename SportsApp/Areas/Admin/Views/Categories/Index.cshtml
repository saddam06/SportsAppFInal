@model IEnumerable<SportsApp.Models.Category>

@{
    ViewData["Title"] = "Index";
}




<table class="table col-md-6 offset-3   text-center mb-5">
    <thead >
        <tr class="text-white bg-dark">
            <th >
                @Html.DisplayNameFor(model => model.CategoryName)

            </th>
            <th>
                <a class="btn float-right btn-success" asp-action="Create">Create New Category </a>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="pl-5">
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td class="pl-5" >
                    <a class="btn btn-success  " asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a class ="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

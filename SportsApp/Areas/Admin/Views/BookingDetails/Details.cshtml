@model SportsApp.Models.BookingDetail

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BookingDetail</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Pruduct Name</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            <p>Selected Quantity</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            <p>Mobile Number</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MoibileNumber)
        </dd>
        <dt class = "col-sm-2">
            <p>Delivery Address</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserAddress)
        </dd>
    </dl>
</div>
<div>

    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
   
    <a asp-area="Admin" asp-controller="BookingDetails" class="btn btn-dark" asp-action="Index1">Place-Order</a>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header ">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark text-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">SportsJunction</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Contacts" asp-action="create" >Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href=" https://localhost:44368/about">About Us</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-toggle="dropdown" href="#">Manage</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="categories" asp-action="Index">Categories</a>
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Products" asp-action="create"> Create Products</a>
                               
                                   
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-toggle="dropdown" href="#">User</a>
                            <div class="dropdown-menu">
                                
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Products" asp-action="index">Products</a>
                                   <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Bookingdetails" asp-action="Index">Order History</a> 
                                   <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Contacts" asp-action="Index">Reviews</a>
                                   
                            </div>
                        </li>
                    </ul>


                </div>

                <form class="form-inline mt-md-3" method="get" asp-area="Admin" asp-controller="Products" asp-action="Index">
                    <p class="float-right">
                        <input type="text" class="pb-1 pl-3 mt-1 pr-3"  placeholder="Search Products" name="SeachString" />
                        <input type="submit" value="Search" class="btn btn-dark text-white border-white" />
                      


                    </p>

                </form>

                <partial name="_loginPartial" />

                
            </div>
        </nav>
    </header>
    <div class=" container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top mt-5 bg-dark text-white footer text-muted">
        <div class="container-fluid text-center">
           
       <a href="https://localhost:44368/swagger/index.html"> Swagger</a>
          
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
